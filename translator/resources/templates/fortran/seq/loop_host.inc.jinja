{%- macro arg_to_pointer(arg) -%}
    {%- if arg is gbl and arg is reduction and lh is indirect -%}
gbl{{arg.id}}_temp
    {%- elif arg is gbl -%}
gbl{{arg.id}}
    {%- elif arg is direct -%}
dat{{arg.dat_id}}({{"1" if lh.dat(arg).dim == 1 else ":"}}, n + 1)
    {%- else -%}
dat{{arg.dat_id}}({{"1" if lh.dat(arg).dim == 1 else ":"}}, map{{arg.map_id}}({{arg.map_idx}}, n + 1) + 1)
    {%- endif -%}
{%- endmacro -%}

{%- macro type_c(arg) -%}
    {%- if arg.access_type is instance(OP.Int) -%}
        int
    {%- elif arg.access_type is instance(OP.Bool) -%}
        bool
    {%- elif arg.access_type.size == 32 -%}
        float
    {%- else -%}
        double
    {%- endif -%}
{%- endmacro -%}

