subroutine {{lh.kernel}}_wrapper( &
{{"    optflags, &\n" if lh.args|opt|length > 0-}}
{% for dat in lh.dats %}
    dat{{dat.id}}, &
{% endfor %}
{% for map in lh.maps %}
    map{{map.id}}, &
