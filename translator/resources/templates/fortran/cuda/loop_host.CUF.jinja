{% for arg in lh.args|indirect|reduction if target.config.atomics %}
    {{lh.dat(arg).typ}}, dimension({{dat_dim_w(lh.dat(arg))}}) :: arg{{arg.id}}_{{arg.map_idx}}_local{{"\n" if loop.last}}
